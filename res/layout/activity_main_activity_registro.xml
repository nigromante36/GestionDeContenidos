<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gestiondecontenidoandroid.MainActivityRegistro" >

    <TextView
        android:id="@+id/textViewRegistroDeUsuarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Registro de usuarios"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/editTextCedulaRegistro1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Ingrese su cedula"
        tools:ignore="HardcodedText" >

        <requestFocus />
    </EditText>

    <Spinner
        android:id="@+id/spinnerTipoDocumentoRegistro1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/editTextCodigoRegistro1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Ingrese el codigo de estudiante"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/editTextNombresRegistro1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Ingrese sus nombres"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/editTextApellidosRegistro1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Ingrese sus apellidos"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/editTextFechaNacimientoRegistro1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Ingrese su fecha de nacimiento"
        android:inputType="date"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnContinuarRegistro1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Continuar"
        tools:ignore="HardcodedText" />

</LinearLayout>
